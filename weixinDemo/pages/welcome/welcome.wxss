/* 样式表  */
.container{
  display: flex;
  flex-direction: column; /* 排列方向  */
  align-items: center;  /* 对齐方式  */
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container{
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 200rpx;
  text-align: center;
  border-radius: 5rpx;
}
.moto{
  font-size: 24rpx;
  font-weight: bold;
  color: #405f80;
}
page{
  height: 100%;
  background:#b3d4db; 
}